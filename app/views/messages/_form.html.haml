- @message ||= Message.new

#message_form
  %a{id: 'message_form'}

  = form_for @message, url: contact_us_path do |f|
    - if @message.errors.any?
      #error_explanation
        %h2= "#{pluralize(@message.errors.count, "error")} prevented this message from being sent:"
        %ul
          - @message.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :names
      = f.text_field :names, placeholder: "Names"
    .field
      = f.label :message
      = f.text_area :message, placeholder: "Message", rows: 10
    .actions
      = f.submit "Send message"
